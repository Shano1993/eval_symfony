        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    <div class="container-fluid mt-4 w-50">
        {% form_theme registrationForm 'bootstrap_5_horizontal_layout.html.twig' %}
        {{ form(registrationForm) }}
    </div>

{% endblock %}
